{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Projects */
    "incremental": true,

    /* Language and Environment */
    "target": "ES2020",
    "lib": ["DOM"],

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",

    /* JavaScript Support */

    /* Emit */
    "sourceMap": true,
    "outDir": "dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
